{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "node_modules/**/*",
      ".next/**/*",
      "build/**/*",
      "dist/**/*",
      "coverage/**/*",
      "public/**/*",
      ".vercel/**/*",
      "*.min.js",
      "*.config.js",
      "next-env.d.ts",
      "package-lock.json",
      "yarn.lock",
      "pnpm-lock.yaml",
      ".env*",
      ".gitignore",
      "README.md"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  }
}
